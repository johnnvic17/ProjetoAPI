<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/others_ratings_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_title_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        tools:text="Internet Movie Database"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/item_image_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_rating"
        android:layout_marginTop="4dp"
        app:chainUseRtl="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/item_title_ratings"
        app:layout_constraintStart_toStartOf="@id/item_title_ratings"
        app:layout_constraintEnd_toStartOf="@id/item_value_ratings"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_value_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="8.7/10"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/item_image_ratings"
        app:layout_constraintEnd_toEndOf="@id/item_title_ratings"
        app:layout_constraintStart_toEndOf="@id/item_image_ratings"
        app:layout_constraintBottom_toBottomOf="@id/item_image_ratings"/>


</androidx.constraintlayout.widget.ConstraintLayout>